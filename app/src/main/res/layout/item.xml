<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/movie_cover_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="@dimen/text_small_margin" />

    <TextView
        android:id="@+id/movie_name_text_view"
        style="@style/TextView.Primary.Bold"
        android:layout_toEndOf="@id/movie_cover_image_view" />

    <TextView
        android:id="@+id/movie_name_eng_text_view"
        style="@style/TextView.Secondary"
        android:layout_marginStart="@dimen/text_small_margin"
        android:layout_toEndOf="@+id/movie_name_text_view" />

    <TextView
        android:id="@+id/premiere_date_text_view"
        style="@style/TextView.Secondary"
        android:layout_below="@id/movie_name_text_view"
        android:layout_marginStart="@dimen/text_small_margin"
        android:layout_toEndOf="@id/movie_cover_image_view"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/description_text_view"
        style="@style/TextView.Primary"
        android:layout_below="@id/premiere_date_text_view"
        android:layout_marginTop="@dimen/text_small_margin"
        android:layout_toEndOf="@id/movie_cover_image_view" />

</RelativeLayout>